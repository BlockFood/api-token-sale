  "bugs": {
    "url": "https://github.com/BlockFood/blockfood-api/issues"
  },
  "homepage": "https://github.com/BlockFood/blockfood-api#readme",
  "devDependencies": {
    "axios": "^0.17.1",
    "chai": "^4.1.2",
    "mocha": "^4.0.1",
    "mongo-in-memory": "0.0.5",
    "sinon": "^4.1.3",
    "supertest": "^3.0.0"
  },
  "dependencies": {
    "email-validator": "^1.1.1",
    "escape-html": "^1.0.3",
    "express": "^4.16.2",
    "fs-extra-promise": "^1.0.1",
    "htmlmin": "0.0.7",
    "mongodb": "^3.0.0-rc0",
    "multiparty": "^4.1.3",
    "mustache": "^2.3.0",
    "nodemailer": "^4.4.1",
    "random-id": "0.0.2"
  }
}
